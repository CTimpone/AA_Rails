
<input type="hidden"
       name="authenticity_token"
       value="<%= form_authenticity_token %>">

<label for="cat_name">Name</label>
<input type="text"
       name="cat[name]"
       value="<%= @cat.name %>"
       id="cat_name">

<br>

<label for="cat_description">Description of Memories</label>
<textarea name="cat[description]"
          id="cat_description"><%= @cat.description%></textarea>

<br>

<label for="cat_sex_female">Female</label>
<input type="radio"
        name="cat[sex]"
        id="cat_sex_female"
        value="f"
        <%= " checked" if @cat[:sex] == 'f'%>>

<label for="cat_sex_male">Male</label>
<input type="radio"
        name="cat[sex]"
        id="cat_sex_male"
        value="m"
        <%= " checked" if @cat[:sex] == 'm'%>>

<br>

<label for="cat_color">Cat Color</label>
<select name="cat[color]" id="cat_color">
    <option value=""></option>
    <% Cat::COAT_COLORS.each do |color| %>
      <option value="<%= color%>"
              <%= "selected" if @cat[:color] == color %>>
              <%= color.capitalize%>
      </option>
    <% end %>
</select>
<br>

<label for="cat_birth_date">Cat's Birthday</label>
<input type="date"
        name="cat[birth_date]"
        value=<%= @cat.birth_date %>
        id = "cat_birth_date">

<br>

<button>Submit</button>

</form>
