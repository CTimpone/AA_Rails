<!DOCTYPE html>
<html>
<head>
  <title>Resolution</title>
  <%= csrf_meta_tags %>
</head>
<body>

<% unless signed_in? %>
  <%= link_to "Sign In", new_session_url %>
  <%= link_to "Sign Up", new_user_url %>
<% else %>
  <%= button_to "Sign Out", session_url, method: :delete %>
<% end %>
<br>

<ol>
<%flash[:errors].each do |error| %>
  <li>
    <%= error %>
  </li>
<% end unless flash[:errors].nil? %>
</ol>
<% flash[:errors] = nil %>

<%= yield %>

</body>
</html>
