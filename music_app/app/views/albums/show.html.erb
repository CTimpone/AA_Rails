<h2>
  <% html = "#{@album.band.name} - "+ "#{@album.name}" %>
  <% if @album.live == true
        html += " - LIVE"
      end%>
  <%= html %>
</h2>

<ol>
  <% @album.tracks.reverse.each do |track| %>
    <li>
      <a href="<%= track_url(track)%>"><%= track.name %></a>
    </li>
  <% end %>
</ol>


<%= button_to "Add Track", new_album_track_url(@album), method: :get%>
<br>

<%= button_to "Edit Album", edit_album_url, method: :get%>

<form action="<%= album_url(@album)%>" method="post">
  <%= auth_token %>
  <input type="hidden" name="_method" value="delete">

  <button>Delete Album</button>

</form>

<br>
<br>

<%= button_to "Return to Artist", band_url(@album.band), method: :get %>
